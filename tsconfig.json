{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "target": "ES2020",
    "module": "CommonJS",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": "./src/",
    "paths": { "#/*": ["*"] }
  },
  "include": ["./src", "./examples", "./tests"],
  "exclude": ["node_modules"]
}
